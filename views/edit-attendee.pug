doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Edit Attendee
    link(rel="stylesheet", href="/css/style.css")
  body
    header
      nav
        a(href="/") Home |
        a(href="/attendees") Attendees |
        a(href="/signup") Sign Up |
        button(onclick="window.location.href='/logout'") Log out

    h2 Edit Attendee

    form(action=`/update-attendee/${attendee.id}`, method="POST")
      label(for="first_name") First Name:
      input(type="text", name="first_name", value=attendee.first_name, required)
      br
      label(for="last_name") Last Name:
      input(type="text", name="last_name", value=attendee.last_name, required)
      br
      label(for="street_address") Street:
      input(type="text", name="street_address", value=attendee.street_address, required)
      br
      label(for="city") City:
      input(type="text", name="city", value=attendee.city, required)
      br
      label(for="state") State:
      input(type="text", name="state", value=attendee.state, required)
      br
      label(for="country") Country:
      input(type="text", name="country", value=attendee.country, required)
      br
      label(for="phone") Phone:
      input(type="text", name="phone", value=attendee.phone, required)
      br
      label(for="email") Email:
      input(type="email", name="email", value=attendee.email, required)
      br
      label(for="league_id") League ID:
      input(type="text", name="league_id", value=attendee.league_id, required)
      br
      label(for="league_rank") League Rank:
      input(type="text", name="league_rank", value=attendee.league_rank, required)
      br
      label(for="preferred_position") Preferred Position:
      input(type="text", name="preferred_position", value=attendee.preferred_position, required)
      br
      button(type="submit") Update Attendee